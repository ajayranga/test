<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('./../partialViews/head') %>
  <title>Contact Us</title>
</head>

<body>
  <!-- Navigation Bar-->
  <%- include('./../partialViews/navBar') %>

  <section class="hero heroContact">
    <div class="text">
      <h1>Contact Us</h1>
      <span>Home / Contact Us</span>
    </div>
  </section>

  <section class="mainContactPage">
    <div class="map" id="map"></div>
    <ul class="data">
      <li>
        <i class="fas fa-home"></i>
        <h3>Noida, India</h3>
        <span>Sector 45</span>
      </li>
      <li>
        <i class="fas fa-phone-alt"></i>
        <h3>00(440)9865562</h3>
        <span>Mon to Fri 9am to 6pm</span>
      </li>
      <li>
        <i class="fas fa-home"></i>
        <h3>support@tvastra.com</h3>
        <span>Send us any query anytime</span>
      </li>
    </ul>
    <form action="" type="post" class="message">
      <div class="allInputs">
        <div class="inputContainer" id="input1">
          <input type="text" placeholder="Enter Your Name" />
        </div>
        <div class="inputContainer" id="input2">
          <input type="text" placeholder="Enter Email address" />
        </div>
        <div class="inputContainer" id="input3">
          <input type="text" placeholder="Enter Subject" />
        </div>
        <div class="inputContainer txtareaContainer" id="input4">
          <textarea name="message" id="" cols="30" rows="10" placeholder="Enter Message"></textarea>
        </div>
        <div class="btnContainer" id="button1">
          <button>Send Message</button>
        </div>
      </div>
    </form>
  </section>
  <!--Footer Section-->
  <%- include('./../partialViews/footer') %>
</body>
<script type="text/javascript" src="../scripts/nevBar.js"></script>
<script>
  var map, marker;

  function initMap() {
    map = new google.maps.Map(document.getElementById("map"), {
      center: {
        lat: 28.5260526,
        lng: 77.3866258,
      },
      zoom: 13,
    });
    marker = new google.maps.Marker({
      position: {
        lat: 28.5260526,
        lng: 77.3866258,
      },
      map: map,
    });
  }
</script>
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDsKJ_26cV1y7M4fR4LrxjvScGAPzPWGTk&callback=initMap" async
  defer></script>

</html>